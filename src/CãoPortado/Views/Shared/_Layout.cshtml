<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CãoPortado</title>
    <link rel="shortcut icon" href="~/img/Sem_titulo-1.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CãoPortado.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_Layout.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CãoPortado</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Depoimentos">Depoimentos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Empresa">A Empresa</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"></a>
                            </li>
                            
                            @if ((User.IsInRole("Admin")))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Clientes" asp-action="Index">Usuarios</a>
                                </li>
                            }

                        }
                    </ul>
                   <ul Class="navbar-nav">
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                 <a class="nav-link text-dark">Perfil</a>
                            </li>
                            <div class="action">
                                <div class="profile" onclick="menuToggle();">
                                </div>

                                <div class="menu">
                                    <h3>
                                        Editar perfil
                                        <div>
                                            Olá, @User.Identity.Name
                                        </div>
                                    </h3>
                                    <ul>

                                        <li><img src="~/img/edit-profile.png"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="MeuPerfil">Meu perfil</a></li>

                                        <li><img src="~/img/pet-icon.png"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="MeuPet">Meu pet</a></li>

                                        <li><img src="~/img/reserva-icon.png"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="#">Reservas</a></li>

                                       <li><img src="~/img/log-out.png"><a class="nav-link text-dark" asp-area="" asp-controller="Clientes" asp-action="Logout">Sair</a></li>

                                        </ul>
                                 </div>
                                 </div>
        

                        }
                        else
                        {
                           <li class="nav-link">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Clientes" asp-action="Login">Entrar</a>
                            </li>
                        }
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - CãoPortado - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
     <script>
        function menuToggle(){
            const toggleMenu = document.querySelector('.menu');
            toggleMenu.classList.toggle('active')
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
