@model PetHotel.Models.Reservation

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar reservas</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDeChegadaHora" class="control-label"></label>
                <input asp-for="DataDeChegadaHora" class="form-control" />
                <span asp-validation-for="DataDeChegadaHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDePartidaHora" class="control-label"></label>
                <input asp-for="DataDePartidaHora" class="form-control" />
                <span asp-validation-for="DataDePartidaHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serviços" class="control-label"></label>
                <input asp-for="Serviços" class="form-control" />
                <span asp-validation-for="Serviços" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadeDePets" class="control-label"></label>
                <input asp-for="QuantidadeDePets" class="form-control" />
                <span asp-validation-for="QuantidadeDePets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

