@model PetHotel.Models.Clientes



@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html lang="pt-br">

<head>
    
    <title>Cadastro usuário</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="icon" type="icon/ico" href="~/img/favicon.ico">
    <link rel="stylesheet" href="~/css/cadastro.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js" integrity="sha512-pHVGpX7F/27yZ0ISY+VVjyULApbDlD0/X0rgGbTqCE7WFW5MezNTWG/dnhtbBuICzsd0WQPgpE4REBLv+UqChw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.11/jquery.mask.min.js"></script>

</head>

<body>
<div id="main" class="container-fluid">
    <div class="row">
        <!--<div class="col-12" id="header">
            <img src="~/img/logo1.png" alt="Logo CãoPortado">
        </div> -->
    </div>
    <div class="row">
        <div id="fotoCadastro" class="col-sm-6 d-none d-sm-block">
            <img width="600px" height="600px" src="~/img/wade-austin-ellis-FtuJIuBbUhI-unsplash.jpg" alt="Cadastrar usuário">
        </div>
        <div id="cadastro" class="col-sm-6 col-xs-12">
            <form class="formCadastro" name="Cadastro" method="post">

                <legend>
                    <p>Cadastro</p>
                    
                    <h5 id="erro">@ViewBag.Message</h5>-->
                </legend>
                <fieldset>
                    <span>Nome completo</span><br>
                    <input type="text" name="Nome" value="" required><br>
                    <span>CPF</span><br>
                    <input type="text" id="campoCPF" name="CPF" value="" required><br>
                    <span>Data de nascimento</span><br>
                    <input type="text" id="campoData" name="DataDeNascimento" value="" required><br>
                    <span>Endereço</span><br>
                    <input type="text" name="Endereco" value="" required><br>
                    <span>Telefone</span><br>
                    <input type="tel" id="campoTelefone" name="Telefone" value="" required><br>
                    <span>Email</span><br>
                    <input type="email" name="Email" value="" required><br>
                    <span>Senha</span><br>
                    <input type="password" name="Senha" value="" required><br>
                    <span>Confirme a senha</span><br>
                    <input type="password" name="Senha2" value="" required><br><br/>
                    <input id="botaoCad" type="submit" name="Cadastrar" value="CADASTRAR">
                    <p id="possuiCad">Já possui cadastro? Faça login.</p>
                </fieldset>
            </form>
        </div>
    </div>

   
    <script>
        jQuery(function($){
            $("#campoCPF").mask("999.999.999-99",{placeholder:"000.000.000-00"});
            $("#campoData").mask("99/99/9999",{placeholder:"DD/MM/AAAA"});
            $("#campoTelefone").mask("(99)9.9999-9999",{placeholder:"(00)0.0000-0000"});
        });
    </script>
    
    
</div>
</body>

</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}